{
  "compilerOptions": {
    "experimentalDecorators": true,
    "noImplicitReturns": false,
    "noImplicitAny": true,
    "declaration": false,
    "noResolve": false,
    "sourceMap": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "module": "esnext",
    "target": "es6",
    "outDir": "./dist/",
    "jsx": "preserve",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
